<% layout("./layouts/head.ejs") -%>
<body>
  <div class="list-Container">
    <div class="list-img-box">
      <img src="<%=listing.image%>" alt="" srcset="" />
    </div>
    <div class="list-details-box">
      <h1><%=listing.title %></h1>
      <p><%=listing.description%></p>
      <p><b><%=listing.location%>,<%=listing.country%></b></p>
      <h3>&#8377;<%=listing.price.toLocaleString("en-IN")%></h3>
      <div class="btn">
        <a href="/listings/<%=listing._id%>/edit"
          ><button id="btn-edit">Edit</button></a
        >
        <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
          <input type="submit" id="btn-delete" value="Delete" />
        </form>
      </div>
    </div>
  </div>
  <hr />
  <div class="review-Container">
    <div class="review-form-container">
      <form class="review-form" method="post" action="/listings/<%=listing._id%>/review">
        <h2>Leave a Review</h2>
        <input name="rating" type="range" min="1" max="5"/>
        <label>Comment</label>
        <textarea name="comment" rows="7" cols="40"></textarea>
        <input  id="createReviewBtn" class="btn " type="submit" />
      </form>
    </div>
    <div class="review-card-container"></div>
  </div>
</body>
